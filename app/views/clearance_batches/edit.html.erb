<div class="clearance-batch-wrapper">
	<div class="row">
		<h2 class="col-md-8 text-right">Clearance Batch <%= @clearance_batch.id %></h2>
		<h2 class="col-md-4 text-right">
			<%= link_to @clearance_batch do %>
				<i class="fa fa-file-pdf-o fa-fw-2x"></i>
			<% end %>
		</h2>
	</div>

	<div class="flash-messages displayNone"></div>
	<div class="col-sm-12 text-center">
	  <div class="searchbar find_item_id_n_add">
	    <%= form_tag @clearance_batch, method: :put do %>
	      <%= render "search_form" %>
	    <% end %>
	  </div>
	</div>

	<% if @items %>
		<div class="displayItemWrapper">
			<table id="itemsTable" class="table table-hover">
			  <thead><%= render "items/item_thead" %></thead>
			  <tbody><%= render "tbody_multiple_items" %></tbody>
			</table>
		</div>
  <% end %>
</div>

